{
  "name": "backend",
  "version": "0.1.0",
  "publish": false,
  "exports": "./src/main.ts",
  "deploy": {
    "org": "zr",
    "app": "nexus-backend"
  },
  "unstable": ["kv"],
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --unstable-kv src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-env --unstable-kv src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-env --unstable-kv tests/",
    "check": "deno check src/main.ts src/**/*.ts tests/**/*.ts",
    "lint": "deno lint"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "znn-typescript-sdk": "./znn-typescript-sdk/dist/index.js",
    "znn-typescript-sdk/crypto": "./znn-typescript-sdk/dist/crypto/crypto.js",
    "znn-typescript-sdk/primitives": "./znn-typescript-sdk/dist/model/primitives/index.js",
    "jose": "npm:jose@^5.9.0",
    "buffer": "npm:buffer@^6.0.3",
    "bech32": "npm:bech32@^2.0.0",
    "@noble/ed25519": "npm:@noble/ed25519@^2.1.0",
    "@noble/hashes/sha3": "npm:@noble/hashes@^1.3.0/sha3",
    "@noble/hashes/sha2": "npm:@noble/hashes@^1.3.0/sha2",
    "@noble/hashes/blake2b": "npm:@noble/hashes@^1.3.0/blake2b",
    "@noble/hashes/utils": "npm:@noble/hashes@^1.3.0/utils",
    "ed25519-hd-key": "npm:ed25519-hd-key@^1.3.0",
    "crypto": "node:crypto",
    "@scure/bip39": "npm:@scure/bip39@^1.6.0",
    "@scure/bip39/wordlists/english": "npm:@scure/bip39@^1.6.0/wordlists/english",
    "decimal.js": "npm:decimal.js@^10.5.0",
    "bignumber.js": "npm:bignumber.js@^9.3.0"
  },
  "compilerOptions": {
    "strict": true
  },
  "exclude": ["znn-typescript-sdk/"]
}
